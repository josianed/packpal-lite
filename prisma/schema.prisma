datasource db {
    provider     = "mysql"
    url          = env("DATABASE_URL")
    relationMode = "prisma"
}

generator client {
    provider = "prisma-client-js"
}

model Item {
    id             Int     @id @default(autoincrement())
    Pack           Pack?   @relation(fields: [packId], references: [id])
    packId         Int?
    name           String
    brand          String
    model          String
    quantity       Int
    weightMetric   Decimal @db.Decimal(2, 2)
    weightImperial Decimal @db.Decimal(2, 2)

    @@index([packId])
}

model Pack {
    id            Int      @id @default(autoincrement())
    name          String
    date          DateTime @default(now())
    currentWeight Decimal  @db.Decimal(2, 2)
    targetWeight  Decimal  @db.Decimal(2, 2)
    items         Item[]
}
